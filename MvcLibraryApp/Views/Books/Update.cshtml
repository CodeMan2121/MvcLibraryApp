@{
}

<h3>Update Books</h3>
<form asp-controller="Books" asp-action="Update" method="post">
    <div class="mb-3">
        <label for="id" class="form-label">Id</label>
        <input type="number" class="form-control" id="Id" name="Id" readonly asp-for="Id" value="@Model.Id">

        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" value="@Model.Name">

        <label for="Author" class="form-label">Author</label>
        <input type="text" class="form-control" id="Author" name="Author" asp-for="Author" value="@Model.Author">

        <label for="ReleaseDate" class="form-label">ReleaseDate</label>
        <input type="datetime" class="form-control" id="ReleaseDate" name="ReleaseDate" asp-for="ReleaseDate" value="@Model.ReleaseDate">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>