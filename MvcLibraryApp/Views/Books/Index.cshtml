@using MvcLibraryApp.Models.Entities;
@model List<Book>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@*<a href="/Books/Add">Add Book</a>*@
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
<link href="path/to/bootstrap-icons.css" rel="stylesheet">

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center mb-4" style="color: #e74c3c; font-size: 2rem;">Book List</h3>
            <a href="/Books/Add" class="btn btn-primary mb-3" style="background-color: #3498db; border-color: #2980b9;">Add Book</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Author</th>
                        <th scope="col">Release Date</th>
                        <th scope="col">Delete Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <th scope="row">@book.Id</th>
                            <td>@book.Name</td>
                            <td>@book.Author</td>
                            <td>@book.ReleaseDate</td>
                            <td>
                                <a href="/Books/Delete/@book.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                                <a href="/Books/Update/@book.Id" class="btn btn-warning"><i class="bi bi-pencil-fill"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</table>