@using MvcLibraryApp.ViewModels.Courses;
@model UpdateCourseViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center mb-4" style="color: #e74c3c; font-size: 2rem;">Update Course</h3>
            <form asp-controller="Courses" asp-action="Update" method="post">
                <div class="mb-3">
                    <label for="Id" class="form-label" style="color: #f1c40f;">Id</label>
                    <input type="number" class="form-control" id="Id" name="Id" readonly asp-for="Id" value="@Model.Id" style="background-color: #f5f5f5; color: #000000;">
                </div>
                <div class="mb-3">
                    <label for="LessonName" class="form-label" style="color: #3498db;">Lesson Name</label>
                    <input type="text" class="form-control" id="LessonName" name="LessonName" asp-for="LessonName" value="@Model.LessonName" style="background-color: #f5f5f5; color: #000000;">
                </div>
                <div class="mb-3">
                    <label for="LessonTime" class="form-label" style="color: #9b59b6;">Lesson Date</label>
                    <input type="datetime" class="form-control" id="LessonTime" name="LessonTime" asp-for="LessonTime" value="@Model.LessonTime" style="background-color: #f5f5f5; color: #000000;">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="background-color: #e74c3c; color: #ffffff; border-color: #c0392b;">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


