@using MvcLibraryApp.Models.Entities;
@model List<Course>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
<link href="path/to/bootstrap-icons.css" rel="stylesheet">

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center mb-4" style="color: #e74c3c; font-size: 2rem;">Course List</h3>
            <a href="/Courses/Add" class="btn btn-primary mb-3" style="background-color: #3498db; border-color: #2980b9;">Add Course</a>
            <table class="table table-striped" style="margin-top:10px;">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Lesson Name</th>
                        <th scope="col">Lesson Time</th>
                        <th scope="col">Delete Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <th scope="row">@course.Id</th>
                            <td>@course.LessonName</td>
                            <td>@course.LessonTime</td>
                            <td>
                                <a href="/Courses/Delete/@course.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                                <a href="/Courses/Update/@course.Id" class="btn btn-warning"><i class="bi bi-pencil-fill"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</table>