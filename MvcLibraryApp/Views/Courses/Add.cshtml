@using MvcLibraryApp.ViewModels.Courses;
@model AddCourseViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center mb-4" style="color: #e74c3c; font-size: 2rem;">Add Course</h3>
            <form asp-controller="Courses" asp-action="Add" method="post">
                <div class="mb-3">
                    <label for="LessonName" class="form-label" style="color: #3498db;">Lesson Name</label>
                    <input type="text" class="form-control" id="LessonName" name="LessonName" asp-for="LessonName" style="background-color: #f5f5f5; color: #000000;">
                </div>
                <div class="mb-3">
                    <label for="LessonTime" class="form-label" style="color: #e67e22;">Lesson Date</label>
                    <input type="datetime" class="form-control" id="LessonTime" name="LessonTime" asp-for="LessonTime" style="background-color: #f5f5f5; color: #000000;">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="background-color: #e74c3c; color: #ffffff; border-color: #c0392b;">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


