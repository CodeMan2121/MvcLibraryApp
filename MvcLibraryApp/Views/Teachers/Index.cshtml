@using MvcLibraryApp.Models.Entities;
@model List<Teacher>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center mb-4" style="color: #e74c3c; font-size: 2rem;">Teacher List</h3>
            <a href="/Teachers/Add" class="btn btn-primary mb-3" style="background-color: #3498db; border-color: #2980b9;">Add Teacher</a>
            <table class="table table-striped" style="margin-top:10px;">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Experience Year</th>
                        <th scope="col">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teacher in Model)
                    {
                        <tr>
                            <th scope="row">@teacher.Id</th>
                            <td>@teacher.Name</td>
                            <td>@teacher.LastName</td>
                            <td>@teacher.ExperienceYear</td>
                            <td>
                                <a href="/Teachers/Delete/@teacher.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                                <a href="/Teachers/Update/@teacher.Id" class="btn btn-warning"><i class="bi bi-tools"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</table>