@using MvcLibraryApp.Models.Entities;
@model List<Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a href="/Employees/Add">Add Employee</a>


<table class="table" style="margin-top:10px;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">LastName</th>
            <th scope="col">Age</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <th scope="row">@employee.Id</th>
                <td>@employee.Name</td>
                <td>@employee.LastName</td>
                <td>@employee.Age</td>
                <td>
                    <a href="/Employees/Delete/@employee.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    <a href="/Employees/Update/@employee.Id" class="btn btn-warning"><i class="bi bi-tools"></i></a>
                <td />
            </tr>
        }

    </tbody>
</table>